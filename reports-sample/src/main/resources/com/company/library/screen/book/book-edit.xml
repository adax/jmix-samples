<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window"
        caption="msg://bookEdit.caption"
        focusComponent="form">
    <data>
        <instance id="bookDc"
                  class="com.company.library.entity.Book">
            <fetchPlan extends="_base">
                <property name="authors" fetchPlan="_base"/>
                <property name="literatureType" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="authorsDc" property="authors"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <screenSettings id="settingsFacet" auto="true"/>
    </facets>
    <actions>
        <action id="windowCommitAndClose" caption="msg:///actions.Ok"
                icon="EDITOR_OK"
                primary="true"
                shortcut="${COMMIT_SHORTCUT}"/>
        <action id="windowClose"
                caption="msg:///actions.Close"
                icon="EDITOR_CANCEL"/>
    </actions>
    <dialogMode height="600"
                width="800"/>
    <layout spacing="true" expand="editActions">
        <form id="form" dataContainer="bookDc">
            <column width="350px">
                <entityPicker id="literatureTypeField" property="literatureType">
                    <actions>
                        <action id="entityLookup" type="entity_lookup"/>
                        <action id="entityClear" type="entity_clear"/>
                    </actions>
                </entityPicker>
                <textField id="nameField" property="name"/>
                <textArea id="summaryField" property="summary" rows="5"/>
            </column>
        </form>
        <groupBox id="authorsBox" caption="msg://com.company.library.entity/Book.authors">
            <table id="authorsTable" dataContainer="authorsDc" width="100%" height="200px">
                <actions>
                    <action id="add" type="add"/>
                    <action id="exclude" type="exclude"/>
                </actions>
                <columns>
                    <column id="firstName"/>
                    <column id="lastName"/>
                </columns>
                <buttonsPanel>
                    <button action="authorsTable.add"/>
                    <button action="authorsTable.exclude"/>
                </buttonsPanel>
            </table>
        </groupBox>
        <!-- tag::editor-print-button[] -->
        <hbox id="editActions" spacing="true">
            <!-- end::editor-print-button[] -->
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
            <!-- tag::editor-print-button[] -->
            <button id="reportButton" icon="PRINT"/>
        </hbox>
        <!-- end::editor-print-button[] -->
    </layout>
</window>
